{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "target": "ES5",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["babel.config.js", "jest.config.js", "node_modules"],
  "include": ["src/**/*"]
}
